{
  "name": "Tubidy Oyun Botu",
  "description": "Telegram oyun botu - Tabu, kelime türetme, quiz ve daha fazlası!",
  "repository": "https://github.com/yourusername/tubidykelime",
  "keywords": ["python", "telegram", "bot", "oyun", "game"],
  "env": {
    "BOT_TOKEN": {
      "description": "Telegram Bot Token",
      "required": true
    },
    "MONGODB_URI": {
      "description": "MongoDB connection string",
      "required": true
    },
    "PYTHON_VERSION": {
      "description": "Python version",
      "value": "3.11.0"
    },
    "MONGODB_SERVER_SELECTION_TIMEOUT": {
      "description": "MongoDB server selection timeout in milliseconds",
      "value": "10000"
    },
    "MONGODB_CONNECT_TIMEOUT": {
      "description": "MongoDB connection timeout in milliseconds",
      "value": "10000"
    },
    "MONGODB_SOCKET_TIMEOUT": {
      "description": "MongoDB socket timeout in milliseconds",
      "value": "10000"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    "mongolab:sandbox"
  ]
}
